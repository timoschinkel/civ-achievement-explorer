{
    "compilerOptions": {
        "lib": [
            "ES2022",
            "dom"
        ],
        "module": "ES2022",
        "target": "ES2022",

        "outDir": "./dist",
        "rootDir": "./src",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "plugins": [
            {
                "name": "ts-lit-plugin",
                "strict": true
            }
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": []
}
